<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gpdi.hqplus.build.mapper.BuildMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gpdi.hqplus.build.entity.Build">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="parent_id" property="parentId" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="version" property="version" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="project_code" property="projectCode" />
    </resultMap>

    <select id="queryBuildById" parameterType="java.lang.Long" resultType="com.gpdi.hqplus.build.entity.Build">
        SELECT * FROM tb_property_build WHERE parent_id IN
        (SELECT id FROM tb_property_build WHERE id = #{id})
    </select>


    <select id="queryBuildName" resultType="com.gpdi.hqplus.build.entity.Build">
        SELECT * FROM tb_property_build WHERE parent_id = 0
    </select>
</mapper>